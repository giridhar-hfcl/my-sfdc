<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_date_check</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &apos;Closed&apos;),  ISBLANK( Close_date__c ) )</errorConditionFormula>
    <errorDisplayField>Close_date__c</errorDisplayField>
    <errorMessage>Invoice close date must be added when closing the invoice</errorMessage>
</ValidationRule>
