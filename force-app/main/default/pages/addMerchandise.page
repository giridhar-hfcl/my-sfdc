<apex:page StandardController="Merchandise__c">
    <apex:form>
        <apex:pageBlock title="Merchandise Form">
            <apex:pageBlockButtons location="bottom" style="text-align: right">
                <apex:commandButton value="SAVE" action="{!save}" />
                <apex:commandButton value="CANCEL" action="{!cancel}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection
                title="Merchandise Information"
                collapsible="false"
            >
                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="Merchandise Name" />
                    <apex:inputField
                        value="{!Merchandise__c.Name}"
                    /> </apex:pageBlockSectionItem
                ><br />

                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="Merchandise Description" />
                    <apex:inputTextarea
                        value="{!Merchandise__c.Description__c}"
                    /> </apex:pageBlockSectionItem
                ><br />

                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="Merchandise Price" />
                    <apex:inputField
                        value="{!Merchandise__c.Price__c}"
                    /> </apex:pageBlockSectionItem
                ><br />

                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="Merchandise Stock" />
                    <apex:inputField
                        value="{!Merchandise__c.Stock__c}"
                    /> </apex:pageBlockSectionItem
                ><br />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>
